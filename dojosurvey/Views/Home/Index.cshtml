@{
    ViewData["Title"] = "Home Page";
}
@model User

<div class="text-center">
    <h1 class="display-4">Welcome</h1>


</div>
<form asp-action="Create" asp-controller="Home" method="post">
    <div>
        <label asp-for="Name">Your Name:</label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input type="text" asp-for="Name">
    </div>
    <div>
        <label asp-for="Location">Dojo Location</label>
        <span asp-validation-for="Location" class="text-danger"></span>
        <select asp-for="Location" id="">
        <option value="Los Angeles">Los Angelse</option>
        <option value="New York">New York</option>
        <option value="Chicago">Chicago</option>
        </select>
    </div>
    <div>
        <label asp-for="FavoriteLanguage">Favorite Language</label>
        <span asp-validation-for="FavoriteLanguage" class="text-danger"></span>
        <select asp-for="FavoriteLanguage" id="">
        <option value="Python">Python</option>
        <option value="Java">Java</option>
        <option value="c#">C#</option>
        </select>
    </div>
    <div>
        <p>Comment: (optional)</p>
        <textarea name="comments" id="" cols="50" rows="5"></textarea>
    </div>
    <button>Submit</button>
</form>