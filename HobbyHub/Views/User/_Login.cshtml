@model LoginUser

<h3>Login</h3>

<form asp-controller="User" asp-action="Login" method="POST">
    <div class="mb-3">
        <label asp-for="LoginUserName"></label>
        <span asp-validation-for="LoginUserName" class="text-danger font-weight-bold"></span>
        <input asp-for="LoginUserName" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="LoginPassword"></label>
        <span asp-validation-for="LoginPassword" class="text-danger font-weight-bold"></span>
        <input asp-for="LoginPassword" class="form-control" />
    </div>
    <button>Submit</button>
</form>